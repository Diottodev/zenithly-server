{
  "name": "zenithly-server",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "node --env-file .env --experimental-strip-types --no-warnings --watch src/server.ts ",
    "start": "tsx src/server.ts",
    "db:seed": "node --env-file .env --experimental-strip-types --no-warnings src/db/seed.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:start": "vitepress serve docs --port 5050",
    "lint": "biome check",
    "format": "biome format --write",
    "precommit": "lefthook run precommit",
    "deploy": "bash scripts/deploy.sh",
    "monitor": "bash scripts/monitor.sh",
    "setup-server": "bash scripts/setup-server.sh"
  },
  "keywords": [],
  "author": "DiottoDev",
  "license": "ISC",
  "packageManager": "yarn@1.22.19",
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/static": "^8.2.0",
    "@types/bcryptjs": "^3.0.0",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.3.1",
    "dotenv": "^17.2.0",
    "drizzle-orm": "^0.44.3",
    "fastify": "^5.4.0",
    "fastify-plugin": "^5.0.1",
    "googleapis": "^153.0.0",
    "nanoid": "^5.1.5",
    "pg": "^8.16.3",
    "pm2": "^6.0.8",
    "postgres": "^3.4.7",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "drizzle-kit": "^0.31.4",
    "lefthook": "^1.12.2",
    "lint-staged": "^16.1.2",
    "supertest": "^7.1.3",
    "tsx": "^4.20.3",
    "ultracite": "5.0.33",
    "vite-tsconfig-paths": "^5.1.4",
    "vitepress": "^1.6.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite format"
    ]
  }
}